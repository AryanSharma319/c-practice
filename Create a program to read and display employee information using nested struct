
#include <stdio.h>
#include <stdlib.h>

struct Name
{
    char first[10];
    char middle[10];
    char last[10];
};
struct Employee
{
    int performance_points;
    struct Name name;
    int emp_num;
};
void Display(struct Employee *emp)
{
    printf("Employee Number:%d\n",emp->emp_num);
    printf("Employee Name: %s %s %s",emp->name.first,emp->name.middle,emp->name.last);
    printf("\nEmployee Performance points:%d\n",emp->performance_points);
}
void main(void)
{
    struct Employee *emp;
    printf("Enter Employee name:");
    scanf("%s %s %s",emp->name.first,emp->name.middle,emp->name.last);
    printf("Enter performane points out of 10:");
    scanf("%d",&emp->performance_points);
    printf("Enter Employee Number:");
    scanf("%d",&emp->emp_num);
    Display(emp);
}

