#include<stdio.h>

struct Gametime
{
    float cs2;
    float minecraft;
    float war_robots;
};

void main(void)
{
    struct Gametime g, *ptr_g;
    ptr_g=&g;
    printf("Enter Counter Strike 2 Gametime: ");
    scanf("%f",&ptr_g->cs2);
    printf("Enter Minecraft Gametime: ");
    scanf("%f",&ptr_g->minecraft);
    printf("Enter WarRobots Gametime: ");
    scanf("%f",&ptr_g->war_robots);
    printf("  :::Gametimes:::  \n Counter Strike 2: %.1f \n Minecraft: %.1f \n WarRobots: %.1f \n",ptr_g->cs2,ptr_g->minecraft,ptr_g->war_robots);
    printf("Total Gametime: %.1f",ptr_g->cs2+ptr_g->minecraft+ptr_g->war_robots);
}
